{
	"port": 3000,

	"env": "development",

	"mongo": {
		"uri": "mongodb://localhost/test",
		"options": {
			"server": {
				"socketOptions": {
					"keepAlive": 1
				}
			}
		}
	},

	"cookie": {
		"options": {
			"signed": true,
			"httpOnly": true
		},
		"secret": "/L/c8%*[Mo]-n(#R*G}4U7g33P-a4J*",
		"session": {
			"key": "session_id"
		}
	},

	"userdata": {
		"dir": "./userdata",

		"image": {
			"ext": "jpg",
			"prefix": "image",
			"minWidth": 300,
			"minHeight": 300
		},

		"preview": {
			"ext": "jpg",
			"postfix": "_preview",
			"size": 300
		}
	},

	"image": {
		"relativeTimeLimitDays": 3
	}


}