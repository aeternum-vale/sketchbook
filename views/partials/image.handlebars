<div id="image" class="modal image_img-element-invisible image{{#unless image.description}} image_no-description{{/unless}}"{{#if image}}
     data-author-url={{image.author.url}} data-id={{image._id}}{{/if}}>
    <div class="image__image-wrapper">
        {{> spinner
                parent="image"
        }}
        <img class="image__img-element"{{#if image}} src="{{image.imgUrl}}"{{/if}}>
        <div class="image__controls">
            <div class="image__control image__control-prev icon-arrow-left"></div>
            <div class="image__control image__control-full icon-arrow-maximise"></div>
            <div class="image__control image__control-next icon-arrow-right"></div>
        </div>
    </div>
    <div class="image__sidebar">
        <div class="image__top-side">
            <div class="header image__header">
                <a class="image__header-left-side" href="{{image.author.url}}">
                    <div class="image__avatar"
                         style="background-image: url('{{image.author.avatarUrls.medium}}')"></div>
                    <div class="image__metadata">
                        <div class="image__username">{{image.author.username}}</div>
                        <div class="image__post-date">{{image.createDateStr}}</div>
                    </div>
                </a>

                <div class="button button_invisible image__top-side-button image__delete-button button_header-style">
                    delete
                </div>
                <div
                    {{#if image.author.isNarrator}}
                    data-active="true"
                    class="button button_active image__top-side-button image__subscribe-button button_header-style"
                    {{else}}
                    class="button image__top-side-button image__subscribe-button button_header-style"
                    {{/if}}
                >
                    subscribe
                </div>
            </div>


            <div class="image__info-board">

                {{> like-button}}

                <div class="image__description">
                    {{image.description}}
                </div>

            </div>


            <div class="image__comment-section-wrapper image_no-scrollbar">
                <div class="comment-section image__comment-section">
                    <div class="comment-section__no-comments-block">
                        There are no comments yet
                    </div>
                    <div class="comment-section__comments-wrapper">

                        {{#if image.comments}}
                            {{#each image.comments}}
                                {{> comment
                                }}
                            {{/each}}
                        {{else}}
                            {{> comment
                                    ghost=true
                                    isOwnComment=true
                            }}

                        {{/if}}
                    </div>
                </div>
            </div>

            <div class="image__comment-section-scrollbar-wrapper image_no-scrollbar">
                <div class="image__comment-section-scrollbar-offset"></div>
                <div class="image__comment-section-scrollbar">
                    <div class="image__comment-section-slider"></div>
                </div>

            </div>

        </div>

        <div class="panel comment comment-send image__comment-send"
             data-image-id="{{image._id}}">
            <div class="comment__top-side">
                <div class="comment__avatar"></div>
                <div class="comment__username"></div>
            </div>

            <textarea placeholder="share your opinionâ€¦" class="comment-send__textarea"></textarea>
            <div class="button comment-send__send-button">send</div>
        </div>
    </div>
    <div class="image__modal-close-button-wrapper">
        {{> modal-close-button
                parent="image"
        }}
    </div>

</div>

