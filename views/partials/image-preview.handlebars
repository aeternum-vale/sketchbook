{{#unless ghost}}
    <a data-id="{{imageId}}"
       data-like-amount="{{likes}}"
       data-comment-amount="{{comments}}"
       href="/image/{{imageId}}" class="image-preview gallery__image-preview"
       style="background-image: url('{{previewUrl}}')">
{{else}}
    <a class="image-preview gallery__image-preview image-preview_ghost">
{{/unless}}
    <div class="image-preview__info-board">
        <div class="image-preview__comment-section">{{comments}}&nbsp;
            <div class="image-preview__designation">
                <div class="image-preview__designation-symbol"></div>
                <div class="image-preview__designation-text">comments</div>
            </div>
        </div>
        <div class="image-preview__like-section">{{likes}}&nbsp;
            <div class="image-preview__designation">
                <div class="image-preview__designation-symbol"></div>
                <div class="image-preview__designation-text">likes</div>
            </div>
        </div>
    </div>
</a>