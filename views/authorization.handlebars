<div id="authorization" class="authorization">
    <div class="authorization__wrapper authorization__background-wrapper"
         data-images='{{{images}}}'>
        <div class="authorization__left-pic-wrapper">
            <div class="authorization__left-pic"></div>
            <div class="authorization__left-pic"></div>
        </div>
        <div class="authorization__right-pic-wrapper">
            <div class="authorization__right-pic"></div>
            <div class="authorization__right-pic"></div>
        </div>
    </div>

    <div class="authorization__backdrop"></div>

    <div class="authorization__wrapper">
        <div class="background authorization__vert-line"></div>
    </div>

    <div class="authorization__wrapper authorization__wrapper_column">
        <div class="authorization__auth-window-shadow authorization__auth-window-shadow_up"></div>

        <div id="auth-window" class="window auth-window authorization__auth-window">
            <div class="header window__header">
                logging in
            </div>
            <div class="panel window__panel">
                <form class="window__panel auth-window__form auth-window__form_invisible" action="/join" method="POST" name="join" role="form">
                    {{> textbox name="username" caption="username" parent="window"}}
                    {{> textbox name="email" caption="e-mail" parent="window"}}
                    {{> textbox name="password" caption="password" type="password" parent="window"}}
                    {{> textbox name="password-again" caption="password again" type="password" parent="window"}}
                    <div class="button save-button window__button">join</div>

                    <span class="window__message">
                Already have an account? <span class="ref">Log in</span>
                </span>
                </form>

                <form class="window__panel auth-window__form auth-window__form_invisible" action="/login" method="POST" name="login" role="form">
                    {{> textbox name="username" caption="username" parent="window"}}
                    {{> textbox name="password" caption="password" type="password" parent="window"}}
                    <div class="button save-button window__button">login</div>
                    <span class="window__message">
                    Donâ€™t have an account? <span class="ref">Sign up</span>
                </span>
                </form>

            </div>



        </div>
        <div class="authorization__auth-window-shadow"></div>
        <a href="/" class="authorization__logo"></a>
    </div>

</div>




