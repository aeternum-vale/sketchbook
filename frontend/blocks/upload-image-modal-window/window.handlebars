<div class="window window_invisible modal modal-window upload-image-modal-window" id="upload-image-modal-window">
	<div class="header window__header">
		image uploading
	</div>
	<div class="panel window__panel">
		{{> file-picker
			parent="upload-image-modal-window"
		}}
		{{> textarea
			placeholder="describe your work"
			parent="upload-image-modal-window"
		}}
		<span class="window__error-message"></span>
        {{> spinner
            parent='upload-image-modal-window'
            invisible=true
        }}
		<div class="button upload-image-modal-window__button">upload</div>
	</div>
    {{> modal-close-button}}
</div>